@inherits LayoutComponentBase
<MudThemeProvider @rendermode="InteractiveServer" />
<MudSnackbarProvider @rendermode="InteractiveServer" />
<MudDialogProvider @rendermode="InteractiveServer" />

<div class="page">
    <div class="sidebar">
    </div>

    <main>

        <header style="display: flex; justify-content: center; align-items: center; padding: 10px 0;">
            <MudText Style="padding-left: 20px; padding-top: 5px;" Typo="Typo.h5">AAT Assessment</MudText>
        </header>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
